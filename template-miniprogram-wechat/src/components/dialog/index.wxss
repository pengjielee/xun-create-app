@import '../../assets/wxss/hairline.wxss';

.p-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #222222;
  z-index: 9999999;
  visibility: visible;
  opacity: 0.8;
}

.p-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 550rpx;
  z-index: 9999999;
  background: #fff;
  text-align: center;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.p-dialog .p-dialog__hd {
  margin: 60rpx 0 40rpx;
}
.p-dialog .p-dialog__hd-title {
  font-size: 34rpx;
  color: #31373f;
  font-weight: bold;
}
.p-dialog .p-dialog__bd {
  font-size: 28rpx;
  color: #31373f;
  margin-bottom: 50rpx;
  padding: 0 30rpx;
  line-height: 43rpx;
}
.p-dialog .p-dialog__ft {
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  outline: none;
}

.p-dialog .p-dialog__btn {
  width: 100%;
  padding: 40rpx 0;
}
.p-dialog .p-dialog__btn_primary {
  font-size: 32rpx;
  font-weight: bold;
  color: #f22d50;
}
.p-dialog-confirm .p-dialog__ft {
  padding: 0;
  display: flex;
}
.p-dialog-confirm .p-dialog__ft .p-dialog__btn {
  padding: 30rpx 0;
}
