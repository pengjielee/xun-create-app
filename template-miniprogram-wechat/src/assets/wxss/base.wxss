.card-doctor-item,
.card-doctor-intro {
  position: relative;
  padding: 20px 0;
  color: #31373f;
}

.card-doctor-item .media .media-left,
.card-doctor-intro .media .media-left {
  font-size: 0;
}

.card-doctor-item .media .media-right,
.card-doctor-intro .media .media-right {
  margin-left: 15px;
  flex: 0 1 100%;
}

.card-doctor-item .doctor-item__img,
.card-doctor-intro .doctor-item__img {
  width: 60px;
  height: 60px;
  border-radius: 10px;
}

.card-doctor-item .doctor-item__info,
.card-doctor-intro .doctor-item__info {
  display: flex;
  align-items: center;
  margin-bottom: 6px;
}

.card-doctor-item .doctor-item__name,
.card-doctor-intro .doctor-item__name {
  color: #31373f;
  font-size: 19px;
  font-weight: bold;
  max-width: 100px;
}

.card-doctor-item .doctor-item__work,
.card-doctor-intro .doctor-item__work {
  font-size: 14px;
  color: #444951;
  font-weight: bold;
  margin-bottom: 6px;
}

.card-doctor-item .doctor-item__work span,
.card-doctor-intro .doctor-item__work span {
  margin-right: 5px;
}

.card-doctor-item .doctor-item__goodat,
.card-doctor-intro .doctor-item__goodat {
  color: #999fa9;
  font-size: 14px;
  word-break: break-all;
}

.card-doctor-item .tag-position,
.card-doctor-intro .tag-position {
  margin-left: 5px;
  max-width: 100px;
}

.card-doctor-item {
  padding: 0;
  padding-bottom: 30px;
}

.card-doctor-intro .media {
  margin-bottom: 15px;
}

.card-doctor-intro .doctor-item__goodat {
  font-size: 14px;
}

.card-doctor-intro .btn-expand {
  bottom: -1px;
}

.card-hospital-item {
  margin-bottom: 30px;
}

.card-hospital-item .media .media-left {
  font-size: 0;
}

.card-hospital-item .media .media-right {
  margin-left: 15px;
  flex: 0 1 100%;
}

.card-hospital-item .hospital-item__name {
  font-size: 19px;
  font-weight: bold;
  margin: 2px 0;
  color: #31373f;
}

.card-hospital-item .hospital-item__address {
  font-size: 14px;
  word-break: break-all;
  margin-bottom: 3px;
  font-weight: 400;
  color: #999fa9;
}

.card-hospital-item .hospital-item__distance {
  font-size: 12px;
  color: #999fa9;
  font-weight: 400;
}

.card-hospital-item .hospital-item__img {
  width: 60px;
  height: 60px;
  border-radius: 10px;
}
